{
  "files.exclude": {
    "**/node_modules": true,
    "**/build": true,
    "**/target": true,
    "**/.next": true,
    "**/.turbo": true,
    "**/.vercel": true,
    "**/*.tsbuildinfo": true,
    "**/next-env.d.ts": true,
  },
  "search.exclude": {
    "**/*-lock.json": true,
    "**/*-lock.yaml": true,
    "**/*.lock": true,
    "**/dist": true,
    "**/.gitignore": true,
    "**/.gitmodules": true
  },
  "typescript.validate.enable": true,
  "editor.detectIndentation": false,
  "editor.formatOnPaste": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "[css][scss]": {
    "editor.formatOnPaste": false
  }
}